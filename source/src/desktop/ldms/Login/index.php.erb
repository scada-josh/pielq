                            <input type="radio" name="optionsRadios" id="optionsRadios25" value="option1" checked=""> LOGISTICS
                            <span></span>
                        </label>
                        <label class="mt-radio">
                            <input type="radio" name="optionsRadios" id="optionsRadios26" value="option2" checked=""> HOME DELIVERY
                            <span></span>
                        </label>
                    </div>
                </div>


                <div class="form-actions">
                    <button type="submit" class="btn green uppercase">Login</button>
                </div>
                <div class="create-account">
                    <p>
                        <a href="../../../" class="uppercase">Back to HOME</a>
                    </p>
                </div>
            </form>
